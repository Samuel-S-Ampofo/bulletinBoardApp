doctype html
html(lang='en')
  head
    title bulletinboard
    link(rel='stylesheet', type='text/css', href='css/style.css')
    script(type='text/javascript', src='js/style.js')
  body
    .container
      .login-container
        #output
        .avatar
          img(src='assets/logo.png', alt='the bulletinboard', style='width:100px;height:100px;')
        .form-box
          form(action='/login', method='POST')
            input(name='email', type='email', placeholder='Email address')
            input(name='password', type='password', placeholder='password')
            button.btn.btn-info.btn-block.login(type='submit') Login
            br
            P If you dont have login details 
            a(href='http://localhost:3000/signup') Sign up Here

 
